<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.form.RegFormInvitationFragment">

    <EditText
        android:id="@+id/edittext__regform__invitation_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/form_horizontal_margin"
        android:layout_marginEnd="@dimen/form_horizontal_margin"
        android:ems="10"
        android:hint="@string/g__edittext__email_address"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text__regform__invitation_email"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/text__regform__invitation_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/form_horizontal_margin"
        android:layout_marginTop="@dimen/form_vertical_margin"
        android:layout_marginEnd="@dimen/form_horizontal_margin"
        android:text="@string/frag_regform__text__invitation_email"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text__regform__invitation_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/form_horizontal_margin"
        android:layout_marginTop="16dp"
        android:text="@string/frag_regform__text__invitation_code"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn__regform__request_code" />

    <EditText
        android:id="@+id/edittext__regform__code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/form_horizontal_margin"
        android:autofillHints="000000"
        android:hint="000000"
        android:hintTextColor="#757575"
        android:inputType="number"
        android:maxLength="6"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text__regform__invitation_code" />

    <Button
        android:id="@+id/btn__regform__request_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/form_horizontal_margin"
        android:text="@string/frag_regform__btn__request_invitation_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext__regform__invitation_email" />

    <Button
        android:id="@+id/btn__regform__next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/form_horizontal_margin"
        android:text="@string/g__btn__next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext__regform__code" />
</androidx.constraintlayout.widget.ConstraintLayout>